@model IEnumerable<HomeHelper.DTO.Devices.TemperatureSensor>
@{
    ViewData["Title"] = "Charts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@foreach (var temperatureSensor in Model)
{
    <div class="col-11 col-sm-9 col-md-7 col-lg-6 pb-5">
        <div class="card-body bg-light shadow hh-rounded">
            <div class="chart-container">
                <div class="@temperatureSensor.Id">
                    <div class="device-name mb-2 hh-fw-l">Name: @temperatureSensor.Name</div>
                    <div class="room-name mb-4 hh-fw-l">Room: @temperatureSensor.RoomName</div>
                    <canvas id="@temperatureSensor.Id" width="300" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
}
